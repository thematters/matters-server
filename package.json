{
  "name": "matters-server",
  "version": "0.0.1",
  "description": "Matters Server",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "build": "tsc --project tsconfig.json",
    "postinstall": "npm run build",
    "watch:build": "tsc --project tsconfig.json --watch",
    "watch:server": "nodemon build/index.js",
    "start": "node build/index.js",
    "start:dev": "npm-run-all clean build --parallel watch:build watch:server --print-label",
    "deploy:production": "sh tools/deploy.sh build+push:production",
    "deploy:stage": "sh tools/deploy.sh build+push:stage",
    "push:production": "sh tools/deploy.sh push:production",
    "push:stage": "sh tools/deploy.sh push:stage",
    "tslint:dev": "tslint --force -c tslint.json 'src/**/*.ts{,x}' -e '**/node_modules/**/*'",
    "tslint:watch:dev": "chokidar 'src/**/*.ts{,x}' -c 'npm run tslint:dev'",
    "tslint:production": "node_modules/.bin/tslint -t verbose -c tslint.json 'src/**/*.ts{,x}' -e '**/node_modules/**/*'",
    "format": "prettier --single-quote --write \"{,!(node_modules|dist|built|coverage|tools)/**/}*.{js,jsx,ts,tsx,json}\"",
    "format:check": "npm run format -- --list-different"
  },
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@aws/dynamodb-auto-marshaller": "^0.7.1",
    "@aws/dynamodb-query-iterator": "^0.7.1",
    "@types/graphql": "^14.0.3",
    "@types/validator": "^9.4.2",
    "amazon-dax-client": "^1.1.4",
    "apollo-server": "^2.2.0",
    "aws-sdk": "^2.316.0",
    "cheerio": "^1.0.0-rc.2",
    "cookie": "^0.3.1",
    "cron": "^1.3.0",
    "dataloader": "^1.4.0",
    "draft-convert": "^2.1.4",
    "draft-js": "^0.10.4",
    "graphql": "^14.0.2",
    "image-size": "^0.6.2",
    "ipfs-api": "^24.0.2",
    "koa": "^2.4.1",
    "koa-body": "^2.5.0",
    "koa-router": "^7.3.0",
    "koa-session": "^5.5.1",
    "lodash": "^4.17.11",
    "module-alias": "^2.1.0",
    "node": "^11.1.0",
    "node-fetch": "^1.7.3",
    "node-readability": "^3.0.0",
    "normalize.css": "^7.0.0",
    "pinyin": "^2.8.3",
    "reselect": "^3.0.1",
    "sharp": "^0.20.1",
    "typescript": "^3.1.6",
    "uuid": "^3.1.0",
    "validator": "^10.9.0",
    "winston": "^2.4.0",
    "ws": "^3.3.3"
  },
  "devDependencies": {
    "@sendgrid/mail": "^6.2.1",
    "@types/bcrypt": "^1.0.0",
    "@types/cheerio": "^0.22.6",
    "@types/cookie": "^0.3.1",
    "@types/cron": "^1.2.1",
    "@types/draft-js": "^0.10.19",
    "@types/image-size": "0.0.29",
    "@types/koa": "^2.0.43",
    "@types/koa-router": "^7.0.27",
    "@types/koa-session": "^3.0.6",
    "@types/lodash": "^4.14.117",
    "@types/node": "^8.5.2",
