{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2017",
    "types": ["node", "jest"],
    "baseUrl": "./src",
    "paths": {
      "common/*": ["common/*"],
      "connectors": ["connectors/"],
      "definitions": ["definitions/"],
      "mutations": ["mutations/"],
      "queries": ["queries/"]
    },
    "pretty": true,
    "lib": [
      "es6",
      "es2015",
      "es2016",
      "es2016.array.include",
      "es2017",
      "dom",
      "esnext"
    ],
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/__test__/**/*.ts"]
}
