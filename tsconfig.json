{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2017",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "common/*": ["src/common/*"],
      "connectors/*": ["src/connectors/*"],
      "definitions*": ["src/definitions*"],
      "mutations/*": ["src/mutations/*"],
      "queries/*": ["src/queries/*"]
    },
    "pretty": true,
    "lib": [
      "es6",
      "es2015",
      "es2016",
      "es2016.array.include",
      "es2017",
      "dom",
      "esnext"
    ],
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/__test__/**/*.ts"]
}
