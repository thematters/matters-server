{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2017",
    "types": ["node"],
    "baseUrl": ".",
    "pretty": true,
    "lib": [
      "es2015",
      "es2016",
      "es2016.array.include",
      "es2017",
      "dom",
      "esnext"
    ],
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "src/v1"],
  "include": ["*.ts?"],
  "files": ["src/index.ts"]
}
