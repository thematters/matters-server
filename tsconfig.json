{
  "compilerOptions": {
    // copy from @tsconfig/node18/tsconfig.json
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./build",
    "customConditions": ["dev-import"]
  },
  "exclude": ["node_modules"]
}
